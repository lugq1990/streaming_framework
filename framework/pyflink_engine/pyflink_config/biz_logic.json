{
    "appName": "MyFlinkStreamingApp",
    "checkpointInterval": 60000,
    "savepointPath": "file:///path/to/savepoint",
    "input": {
        "type": "kafka",
        "kafkaParams": {
            "bootstrap.servers": "localhost:9092",
            "group.id": "flink-group",
            "topics": ["input_topic"]
        }
    },
    "watermark": {
        "timeAttribute": "timestamp",
        "watermarkInterval": 1000,
        "maxOutOfOrderness": 5000
    },
    "transformations": [
        {
            "type": "filter",
            "params": {
                "column": "amount",
                "condition": "> 100"
            }
        },
        {
            "type": "select",
            "params": {
                "columns": [
                    "transaction_id",
                    "amount",
                    "customer_id",
                    "timestamp"
                ]
            }
        },
        {
            "type": "withColumn",
            "params": {
                "column": "amount_usd",
                "expression": "amount * 0.15"
            }
        },
        {
            "type": "drop",
            "params": {
                "columns": [
                    "description",
                    "account_number"
                ]
            }
        },
        {
            "type": "limit",
            "params": {
                "num": 100
            }
        }
    ],
    "queries": [
        {
            "name": "query1",
            "sql": "SELECT transaction_id, amount, customer_id, `timestamp` FROM kafka_table WHERE amount > 100"
        },
        {
            "name": "query2",
            "sql": "SELECT transaction_id, SUM(amount) as total_amount FROM query1 GROUP BY transaction_id"
        }
    ],
    "output": {
        "type": "log_to_console"
    }
}
