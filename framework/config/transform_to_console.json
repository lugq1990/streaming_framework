{
    "appName": "MySparkStreamingApp",
    "batchInterval": 5,
    "input": {
        "type": "kafka",
        "kafkaParams": {
            "metadata.broker.list": "localhost:9092"
        },
        "topic": "input_topic"
    },
    "transformations": [
        {
            "type": "filter",
            "params": {
                "column": "amount",
                "condition": "> 100"
            }
        },
        {
            "type": "select",
            "params": {
                "columns": [
                    "transaction_id",
                    "amount",
                    "customer_id",
                    "timestamp"
                ]
            }
        },
        {
            "type": "withColumn",
            "params": {
                "column": "amount_usd",
                "expression": "amount * 0.15"
            }
        },
        {
            "type": "drop",
            "params": {
                "columns": [
                    "description",
                    "account_number"
                ]
            }
        },
        {
            "type": "limit",
            "params": {
                "num": 100
            }
        }
    ],
    "output": {
        "type": "log_to_console"
    }
}